<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.cmsystem.mapper.ManagersMapper">
  <resultMap id="BaseResultMap" type="com.smart.cmsystem.domain.entity.Managers">
    <!--@mbg.generated-->
    <!--@Table managers-->
    <id column="m_id" jdbcType="INTEGER" property="mId" />
    <result column="m_name" jdbcType="VARCHAR" property="mName" />
    <result column="m_phone" jdbcType="INTEGER" property="mPhone" />
    <result column="m_emils" jdbcType="VARCHAR" property="mEmils" />
    <result column="m_role" jdbcType="VARCHAR" property="mRole" />
    <result column="m_password" jdbcType="VARCHAR" property="mPassword" />
    <result column="m_joiningtime" jdbcType="TIMESTAMP" property="mJoiningtime" />
    <result column="m_state" jdbcType="INTEGER" property="mState" />
    <result column="m_del" jdbcType="INTEGER" property="mDel" />
  </resultMap>
  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    m_id, m_name, m_phone, m_emils, m_role, m_password, m_joiningtime, m_state, m_del
  </sql>
    <select id="selectALL" resultMap="BaseResultMap">
      select <include refid="Base_Column_List"/>
      from managers m
      where m.m_del=1
    </select>
  <select id="selectByKeyword" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>
    from managers m
    <trim prefix="where" >
      m.m_name like concat('%',#{keyword},'%')
      or m.m_role like concat('%',#{keyword},'%')
    </trim>
  </select>
  <insert id="insert">
    insert into managers(m_name, m_phone, m_emils, m_role, m_password, m_joiningtime,m_state)
   value (#{man.mName},#{man.mPhone},#{man.mEmils},#{man.mRole},#{man.mPassword},#{man.mJoiningtime},#{man.mState})
  </insert>
  <update id="updateByField">
    update managers ma
    <trim prefix="set" suffixOverrides=",">
      <if test="field.mName != null and field.mName != ''">
        ma.m_name=#{field.mName,jdbcType=VARCHAR},
      </if>
      <if test="field.mPhone != null">
        ma.m_phone=#{field.mPhone,jdbcType=INTEGER},
      </if>
      <if test="field.mEmils != null and field.mEmils != ''">
        ma.m_emils=#{field.mEmils,jdbcType=VARCHAR},
      </if>
      <if test="field.mRole != null and field.mRole != ''">
        ma.m_role=#{field.mRole,jdbcType=VARCHAR},
      </if>
      <if test="field.mPassword != null">
        ma.m_password=#{field.mPassword,jdbcType=VARCHAR},
      </if>
      <if test="field.mJoiningtime != null">
        ma.m_joiningtime=#{field.mJoiningtime,jdbcType=TIMESTAMP},
      </if>
      <if test="field.mState != null">
        ma.m_state=#{field.mState,jdbcType=INTEGER}
      </if>
    </trim>
    <trim prefix="where">
      ma.m_id=#{field.mId}
    </trim>
  </update>
  <update id="updateByDel">
    update managers m
    set m.m_del=0
    where m.m_id in
      <foreach collection="ints" item="id" index="index"
               open="(" close=")" separator=",">
        #{id}
      </foreach>
  </update>
</mapper>